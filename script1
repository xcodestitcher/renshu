<body>
    <h1>Program Horoskop</h1>
    <button>Click here!</button>
    <p>Keberuntungan Anda hari ini:</p>
    <hr>
    <p id="demo"></p>
    <script>
        const klik = document.querySelector('button');
        klik.addEventListener('click', function () {
            const randomNumber = Date.now();
            document.getElementById("demo").innerHTML = randomNumber;
            if (randomNumber % 2 == 0) {
                document.getElementById("demo").innerHTML = "Hebat!!";
            } else if (randomNumber % 3 != 0 && randomNumber % 5 != 0 && randomNumber % 7 != 0) {
                document.getElementById("demo").innerHTML = "Mengerikan...";
            } else if (randomNumber % 2 == 1) {
                document.getElementById("demo").innerHTML = "Bagus Juga!";
            }
        });


    </script>
</body>

